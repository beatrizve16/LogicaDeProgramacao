#include <stdio.h>
#include <string.h>

void main() {
    char palavra[1000000];
    int i, comprimento;

    printf("Digite uma palavra: ");
    scanf("%s", palavra);

    comprimento = strlen(palavra);

    printf("Palavra na ordem inversa: ");
    for (i = comprimento - 1; i >= 0; i--) {
        printf("%c", palavra[i]);
    }

}

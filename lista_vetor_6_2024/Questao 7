#include <stdio.h>

void main() {
    int a[10], b[20], uniao[30];
    int i, j;

    printf("Digite os numeros do vetor a:\n");

    for (i = 0; i < 10; i++) {
        scanf("%d", &a[i]);
        uniao[i] = a[i];
    }

    printf("Digite os numeros do vetor b:\n");

    for (j = 0; j < 20; j++) {
        scanf("%d", &b[j]);
        uniao[i+j] = b[j];
    }

    printf("Vetor com os dois:\n");

    for (i = 0; i < 30; i++) {
        printf("%d ", uniao[i]);
    }

}

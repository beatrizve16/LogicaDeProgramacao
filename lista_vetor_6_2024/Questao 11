#include <stdio.h>
#include <string.h>

void main() {
    char entrada[60]; 
    int i;

    printf("Digite uma palavra  (limite de 60 caracteres):\n");

    for (i = 0; i < 60; i++) {
        palavra[i] = getchar();
        if (palavra[i]>60){
            break;
            printf("Limite de caracteres atingido");
        }
    }


    printf("Quantidade de caracteres digitados: %d\n", strlen(palavra));

}

#include <stdio.h>
#include <string.h>

int main() {
    char entrada[61]; // 60 caracteres + 1 para o caractere nulo
    int i;

    printf("Digite uma palavra ou sentença (limite de 60 caracteres):\n");

    for (i = 0; i < 60; i++) {
        entrada[i] = getchar();
        if (entrada[i] == '\n') {
            break;
        }
    }

    entrada[i] = '\0'; // Adiciona o caractere nulo para formar a string

    printf("Você digitou: %s\n", entrada);
    printf("Quantidade de caracteres digitados: %d\n", strlen(entrada));

    return 0;
}
